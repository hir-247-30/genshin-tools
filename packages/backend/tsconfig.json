{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "#config/*": ["./src/config/*"],
      "#common/*": ["./src/common/*"],
      "#controllers/*": ["./src/controllers/*"],
      "#domains/*": ["./src/domains/*"],
      "#services/*": ["./src/services/*"],
      "#models/*": ["./src/models/*"]
    }
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": [
    "src/**/*.ts"
  ]
}
